                        <option value="1">JYES</option>
                </field>
				<field
					name="bgColor"
					type="color" 
					label="VINA_CAROUSEL_CONTENT_BG_COLOR" 
					description="VINA_CAROUSEL_CONTENT_BG_COLOR_DESC" 
