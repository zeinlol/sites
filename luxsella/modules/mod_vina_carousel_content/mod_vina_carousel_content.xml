			<!-- Source Block -->
			<fieldset name="carousel">
				<field
                    name="items"
                    type="text"
                    label="VINA_CAROUSEL_CONTENT_ITEMS"
                    default="4"
                    description="VINA_CAROUSEL_CONTENT_ITEMS_DESC" />
				<field
                    name="itemsDesktop"
                    type="text"
                    label="VINA_CAROUSEL_CONTENT_ITEMS_DESKTOP"
