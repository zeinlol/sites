                    label="VINA_CAROUSEL_CONTENT_MHEIGHT"
                    default="auto"
                    description="VINA_CAROUSEL_CONTENT_MHEIGHT_DESC" />
				<field
                    name="moduleMargin"
                    type="text"
                    label="VINA_CAROUSEL_CONTENT_MMARGIN"
                    default="0px"
