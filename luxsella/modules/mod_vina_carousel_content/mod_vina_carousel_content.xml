				<field 
                    name="isBgColor" 
                    type="radio" 
                    default="1" 
					class="btn-group btn-group-yesno"
                    label="VINA_CAROUSEL_CONTENT_IS_BG_COLOR" 
                    description="VINA_CAROUSEL_CONTENT_IS_BG_COLOR_DESC">
