NAV_DESC">						<option value="0">JNO</option>						<option value="1">JYES</option>                </field>				<field                    name="scrollPerPage"                    type="radio"                    default="0"					class="btn-group btn-group-yesno"                    label="VINA_CAROUSEL_VMART_SCROLL_PER_PAGE"                    description="VINA_CAROUSEL_VMART_SCROLL_PER_PAGE_DESC">						<option value="0">JNO</option>						<option value="1">JYES</option>                </field>				<field                    name="pagination"                    type="radio"                    default="1"					class="btn-group btn-group-yesno"                    label="VINA_CAROUSEL_VMART_PAGINATION"                    description="VINA_CAROUSEL_VMART_PAGINATION_DESC">						<option value="0">JNO</option>						<option value="1">JYES</option>                </field>				<field                    name="paginationNumbers"                    type="radio"                    default="0"					class="btn-group btn-group-yesno"                    label="VINA_CAROUSEL_VMART_PAGINATION_NUMBERS"                    description="VINA_CAROUSEL_VMART_PAGINATION_NUMBERS_DESC">						<option value="0">JNO</option>						<option value="1">JYES</option>                </field>				<field                    name="responsive"                    type="radio"                    default="1"					class="btn-group btn-group-yesno"                    label="VINA_CAROUSEL_VMART_RESPONSIVE"                    description="VINA_CAROUSEL_VMART_RESPONSIVE_DESC">						<option value="0">JNO</option>						<option value="1">JYES</option>                </field>				<field                    name="autoHeight"                    type="radio"                    default="0"					class="btn-group btn-group-yesno"                    label="VINA_CAROUSEL_VMART_AUTO_HEIGHT"                    description="VINA_CAROUSEL_VMART_AUTO_HEIGHT_DESC">						<option value="0">JNO</option>						<option value="1">JYES</option>                </field>				<field                    name="mouseDrag"                    type="radio"                    default="1"					class="btn-group btn-group-yesno"                    label="VINA_CAROUSEL_VMART_MOUSE_DRAG"                    description="VINA_CAROUSEL_VMART_MOUSE_DRAG_DESC">						<option value="0">JNO</option>						<option value="1">JYES</option>                </field>				<field                    name="touchDrag"                    type="radio"                    default="1"					class="btn-group btn-group-yesno"                    label="VINA_CAROUSEL_VMART_TOUCH_DRAG"                    description="VINA_CAROUSEL_VMART_TOUCH_DRAG_DESC">						<option value="0">JNO</option>						<option value="1">JYES</option>                </field>				<field 					name="leftOffSet" 					type="text" 					default="0"					label="VINA_CAROUSEL_VMART_LEFT_OFFSET"					description="VINA_CAROUSEL_VMART_LEFT_OFFSET_DESC" />			</fieldset>						<!-- Source Block -->			<fieldset name="source" addfieldpath="/administrator/components/com_virtuemart/fields">				<field 					name="moduleType" 					type="list" 					default="latest"					label="VINA_CAROUSEL_VMART_MODULE_TYPE"					description="VINA_CAROUSEL_VMART_MODULE_TYPE_DESC">						<option value="featured">Featured Products</option>						<option value="latest">Latest Products</option>						<option value="random">Random Products</option>						<option value="topten">Best Sales</option>						<option value="recent">Recent Products</option>				</field>				<field 					name="maxItems" 					type="text" 					default="10"					label="VINA_CAROUSEL_VMART_MAX_ITEMS"					description="VINA_CAROUSEL_VMART_MAX_ITEMS_DESC" />								<field 					name="filterCategory" 					type="radio"					class="btn-group btn-group-yesno"										default="0"					label="VINA_CAROUSEL_VMART_FILTER_CATEGORY"					description="VINA_CAROUSEL_VMART_FILTER_CATEGORY_DESC">