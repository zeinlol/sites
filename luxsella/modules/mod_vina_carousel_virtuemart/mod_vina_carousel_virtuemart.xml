cription="VINA_CAROUSEL_VMART_ITEMS_DESKTOP_DESC" />				<field                    name="itemsDesktopSmall"                    type="text"                    label="VINA_CAROUSEL_VMART_ITEMS_DESKTOP_SMALL"                    default="[980,3]"                    description="VINA_CAROUSEL_VMART_ITEMS_DESKTOP_SMALL_DESC" />				<field                    name="itemsTablet"                    type="text"                    label="VINA_CAROUSEL_VMART_ITEMS_TABLET"                    default="[800,3]"                    description="VINA_CAROUSEL_VMART_ITEMS_TABLET_DESC" />				<field                    name="itemsTabletSmall"                    type="text"                    label="VINA_CAROUSEL_VMART_ITEMS_TABLET_SMALL"                    default="[650,2]"                    description="VINA_CAROUSEL_VMART_ITEMS_TABLET_SMALL_DESC" />				<field                    name="itemsMobile"                    type="text"                    label="VINA_CAROUSEL_VMART_ITEMS_MOBILE"                    default="[450,1]"                    description="VINA_CAROUSEL_VMART_ITEMS_MOBILE_DESC" />								<field type="spacer" name="@carousel" hr="true" />				<field                    name="singleItem"                    type="radio"                    default="0"					class="btn-group btn-group-yesno"                    label="VINA_CAROUSEL_VMART_SINGLE_ITEM"                    description="VINA_CAROUSEL_VMART_SINGLE_ITEM_DESC">						<option value="0">JNO</option>						<option value="1">JYES</option>                </field>				<field                    name="itemsScaleUp"                    type="radio"                    default="0"					class="btn-group btn-group-yesno"                    label="VINA_CAROUSEL_VMART_ITEMS_SCALEUP"                    description="VINA_CAROUSEL_VMART_ITEMS_SCALEUP_DESC">						<option value="0">JNO</option>						<option value="1">JYES</option>                </field>				<field                    name="slideSpeed" 