<div class="comment_block">
	<div class="comment_avatar">
	<a href="/user/{login}"><img src="{foto}" alt=""/></a>
	<br/>
	[online]<div class="online">Онлайн</div>[/online]
	<div style="clear: left;"></div>
	</div>
	<div class="comment_cont">
		<div class="comment_title">
		<div style="float: right;margin-top: -4px;">{date} {mass-action}</div> Комментарий от <a href="/user/{login}">{login}</a>
		</div>
		<div class="comment_text">
		{comment}
		</div>
	</div>
	<div style="clear: left;"></div>
		<div class="comment_options_user">
		[fast]<span>Цитировать</span>[/fast]
		[com-edit]<span>Редактировать</span>[/com-edit]
		[com-del]<span>Удалить</span>[/com-del]
		</div>
	<div style="clear: right;"></div>
</div>